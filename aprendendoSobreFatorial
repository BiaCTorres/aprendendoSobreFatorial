#include <stdio.h>

int main ()
{
    int fatorial;
    int resposta = 1;

    printf ("Insira o valor do fatorial que deseja calcular:");
    scanf ("%i", &fatorial);

    for ( ;fatorial >= 1; --fatorial) {
        resposta *= fatorial;
    }
    
    printf ("O numero fatorial e %i\n", resposta);
    
        
        
        
        
        
        
        return 0;   
}
